{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@client/*": ["client/*"],
      "@server/*": ["server/*"],
      "@common/*": ["common/*"]
    },
    "esModuleInterop": true,
    "jsx": "react",
    "module": "commonjs",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "outDir": "build",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "ES2017"
  }
}
